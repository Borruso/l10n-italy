<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_l10n_it_appointment_code_tree" model="ir.ui.view">
        <field name="name">view.appointment.code.tree</field>
        <field name="model">l10n_it_appointment.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="l10n_it_code" />
                <field name="l10n_it_name" />
            </tree>
        </field>
    </record>

    <record id="view_l10n_it_appointment_code_form" model="ir.ui.view">
        <field name="name">view.appointment.code.form</field>
        <field name="model">l10n_it_appointment.code</field>
        <field name="arch" type="xml">
            <form string="Appointment Code">
                <group>
                    <field name="l10n_it_code" />
                    <field name="l10n_it_name" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_l10n_it_appointment_code" model="ir.actions.act_window">
        <field name="name">Appointment Codes</field>
        <field name="res_model">l10n_it_appointment.code</field>
        <field name="view_id" ref="view_l10n_it_appointment_code_tree" />
    </record>

    <menuitem
        id="menu_l10n_it_appointment_code"
        name="Appointment Codes"
        action="action_l10n_it_appointment_code"
        parent="account.account_account_menu"
        groups="account.group_account_manager"
        sequence="45"
    />

</odoo>
